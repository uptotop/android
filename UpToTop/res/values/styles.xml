<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:style/Theme.Holo.Light">
        <item name="android:popupMenuStyle">@style/PopupMenu.Uptotop</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Uptotop</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Uptotop</item>
        <item name="android:actionBarStyle">@style/ActionBar.Transparent.Uptotop</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_uptotop</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Uptotop</item>
	
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="action_bar_theme" parent="@android:style/Widget.Holo.ActionBar">
      <item name="android:background">#d7333333</item>
      <item name="android:textSize">10sp</item>
        <item name="android:textColor">#1478CB</item>
    </style>
    
    <style name="holo_stl">
       <item name="android:background">#d7333333</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#1478CB</item>
    </style>
    
    <style name =".imageInfo">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#1478CB</item>
		<item name="android:textStyle">bold</item>
        </style>
        
    <style name =".dialogLbl">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#ffffff</item>
		<item name="android:textStyle">bold</item>
        </style>
    <style name =".dialogEdit">
        <item name="android:textSize">16sp</item>
		<item name="android:textStyle">bold</item>
        </style>    
    <style name=".labels_bold">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#09A3AD</item>
    </style>
     <style name=".labels_bold_login">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#09A3AD</item>
    </style>
     <style name=".labels">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#1478CB</item>
    </style>
    <style name=".labels_red">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FF2200</item>
    </style>
    <style name=".edit_txt">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#002255</item>
    </style>
   

    <style name="ActionBar.Transparent.Uptotop" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/ab_transparent_uptotop</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Uptotop</item>
    </style>

    <style name="PopupMenu.Uptotop" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_uptotop</item>	
    </style>

    <style name="DropDownListView.Uptotop" parent="@android:style/Widget.Holo.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_uptotop</item>
    </style>

      <style name="DropDownNav.Uptotop" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_uptotop</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_uptotop</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_uptotop</item>
    </style>
    
    <style name="ProgressBar.Uptotop" parent="@android:style/Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_uptotop</item>
    </style>
    
    <style name="ActionButton.CloseMode.Uptotop" parent="@android:style/Widget.Holo.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_uptotop</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Uptotop.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Uptotop</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Uptotop</item>
    </style>
</resources>
