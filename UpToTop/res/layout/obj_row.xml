<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
     >
    <ImageView
        android:id="@+id/listIconId"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:paddingLeft="10dp"
        />
    <LinearLayout 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.75"
        android:layout_marginLeft="10sp"
        android:orientation="vertical" >
         <TextView 
          style="@style/.labels"   
          android:id="@+id/objectiveNameId"
          android:layout_width="match_parent"
          android:layout_height="20dp"
          android:textSize="16sp"
        ></TextView>
         <TextView 
          style="@style/.labels"   
          android:id="@+id/objectiveDescId"
          android:layout_width="match_parent"
          android:layout_height="20dp"
          android:textSize="16sp"
        ></TextView>
        <TextView 
          style="@style/.labels"   
          android:id="@+id/objectivePriceId"
          android:layout_width="match_parent"
          android:layout_height="20dp"
          android:textSize="16sp"
        ></TextView>  
        <TextView 
          style="@style/.labels_red"   
          android:id="@+id/objectiveStatusId"
          android:layout_width="match_parent"
          android:layout_height="20dp"
          android:textSize="16sp"
        ></TextView>                 	
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.25"
        android:layout_marginRight="10sp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >
        <Button
            style="@style/.labels"
            android:id="@+id/objUpId"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/border_shape"
            android:gravity="center_horizontal"
            android:paddingTop="2dp"
            android:text="@string/btn_up" />
        </LinearLayout>
</LinearLayout>

